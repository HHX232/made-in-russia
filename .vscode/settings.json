{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit",
    "source.fixAll.eslint": "never",
    "source.organizeImports": "never",
    "source.fixAll": "never"
  },
  "stylelint.validate": ["css", "scss"],
  "css.validate": false,
  "scss.validate": false,
  "stylelint.enable": true,
  "editor.organizeImportsOnSave": false,
  "editor.unusedCodeVisibility": "off",
  
  // Отключаем форматирование TypeScript файлов через ESLint
  "eslint.format.enable": false,
  
  // Отключаем автоматическое удаление неиспользуемых импортов для TypeScript
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never",
      "source.fixAll": "never",
      "source.fixAll.eslint": "never"
    }
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never",
      "source.fixAll": "never",
      "source.fixAll.eslint": "never"
    }
  },
  "git.ignoreLimitWarning": true
}
